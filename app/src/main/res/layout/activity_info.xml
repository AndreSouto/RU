<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="andreluis.ru.InfoActivity">

    <TextView
        android:layout_width="10000sp"
        android:layout_height="65sp"
        android:text="\nINFORMAÇÕES"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#fdfbfb"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#E7470D"
        android:id="@+id/Titulo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Diretoria do RU:"
        android:textSize="25sp"
        android:layout_below="@+id/Titulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:textColor="#E7470D"
        android:id="@+id/TextDiretoria"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Diretora: Ygraine Hartmann"
        android:textSize="20sp"
        android:textColor="#514d4c"
        android:layout_below="@+id/TextDiretoria"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Assistente de direção: Danilo dos Santos"
        android:textSize="20sp"
        android:textColor="#514d4c"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Telefone: (61) 3107-1073"
        android:textSize="20sp"
        android:textColor="#514d4c"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/cardapioButton"
        android:src="@drawable/cutlery"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#01ffffff"
        android:clickable="true"
        android:onClick="startActivityCard"/>

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/creditoButton"
        android:background="#01ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cardapioButton"
        android:src="@drawable/coin"
        android:clickable="true"
        android:onClick="startActivityCredit"/>

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/infoButton"
        android:clickable="true"
        android:src="@drawable/info"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/creditoButton" />

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/configButton"
        android:src="@drawable/settings"
        android:background="#00ffffff"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="startActivityConfig"/>



</RelativeLayout>
