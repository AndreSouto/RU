<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="andreluis.ru.FavActivity">

    <TextView
        android:layout_width="10000sp"
        android:layout_height="65sp"
        android:text="\nFAVORITOS"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#fdfbfb"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#E7470D"
        android:id="@+id/Titulo"/>

    <Switch
        android:text="  paleta"
        android:onClick="paletaFunc"
        android:textOff="não"
        android:textOn="sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/paletaSwitch"
        android:layout_below="@+id/Titulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimary" />

    <Switch
        android:text="  lasanha"
        android:onClick="lasanhaFunc"
        android:textOff="não"
        android:textOn="sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/lasanhaSwitch"
        android:layout_below="@+id/paletaSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimary" />

    <Switch
        android:text="  almôndega"
        android:onClick="almondegaFunc"
        android:textOff="não"
        android:textOn="sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/almondegaSwitch"
        android:layout_below="@+id/lasanhaSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimary" />

    <Switch
        android:text="  feijoada"
        android:onClick="feijoadaFunc"
        android:textOff="não"
        android:textOn="sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/feijoadaSwitch"
        android:layout_below="@+id/almondegaSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/cardapioButton"
        android:src="@drawable/cutlery"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#01ffffff"
        android:clickable="true" />

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/creditoButton"
        android:background="#01ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cardapioButton"
        android:src="@drawable/coin"
        android:clickable="true"
        android:onClick="startActivityCredit"/>

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/infoButton"
        android:clickable="true"
        android:src="@drawable/info"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/creditoButton"
        android:onClick="startActivityInfo"/>

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:id="@+id/favButton"
        android:src="@drawable/settings"
        android:background="#00ffffff"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="startActivityFav"/>


</RelativeLayout>